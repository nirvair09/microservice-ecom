{
  "name": "ecom",
  "private": true,
  "packageManager": "pnpm@9.0.0",

  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },

  "workspaces": [
    "apps/*",
    "packages/*"
  ],

  "devDependencies": {
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "prettier": "^3.6.2"
  },

  "engines": {
    "node": ">=18"
  }
}
